# ==========================================
# Django Configuration
# ==========================================

# SECURITY WARNING: keep the secret key used in production secret!
# Generate a new one with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
# IMPORTANT: Use a different secret key for production!
SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION

# SECURITY WARNING: don't run with debug turned on in production!
# Set to False in production
DEBUG=False

# Comma-separated list of allowed hosts
# In production, add your domain (e.g., yourdomain.com,.railway.app)
ALLOWED_HOSTS=localhost,127.0.0.1

# ==========================================
# Database Configuration
# ==========================================

# Development (SQLite - default)
# SQLite is used by default, no additional configuration needed

# Production (PostgreSQL)
# Uncomment and configure for production deployment
# DATABASE_URL=postgresql://username:password@localhost:5432/digitalletter

# ==========================================
# CORS Configuration
# ==========================================

# Comma-separated list of allowed origins for CORS
# Add your frontend URL here
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173

# ==========================================
# Language and Timezone
# ==========================================

# Default language code (es for Spanish, en for English)
LANGUAGE_CODE=es

# Timezone setting
TIME_ZONE=UTC

# ==========================================
# Static and Media Files
# ==========================================

# URL prefix for static files
STATIC_URL=/static/

# URL prefix for media files (user uploads)
MEDIA_URL=/media/

# ==========================================
# Django REST Framework
# ==========================================

# Pagination page size
PAGE_SIZE=10

# ==========================================
# JWT Authentication
# ==========================================

# JWT token lifetime (in minutes)
# Access token expires after this time
JWT_ACCESS_TOKEN_LIFETIME=60

# Refresh token expires after this time (in days)
JWT_REFRESH_TOKEN_LIFETIME=1

# ==========================================
# Email Configuration
# ==========================================

# SMTP email backend for order confirmations
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Note: For Gmail, you need to use an App Password, not your regular password
# Generate one at: https://myaccount.google.com/apppasswords

# ==========================================
# Django Parler (Multi-language)
# ==========================================

# Available languages for translations
# PARLER_LANGUAGES format is configured in settings.py
# Default fallback language is Spanish (es)

# ==========================================
# Production Settings (Uncomment for production)
# ==========================================

# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_BROWSER_XSS_FILTER=True
# SECURE_CONTENT_TYPE_NOSNIFF=True
# X_FRAME_OPTIONS=DENY

# ==========================================
# Additional Settings
# ==========================================

# Set to 'production' or 'development'
ENVIRONMENT=development

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=your-sentry-dsn-here

# ==========================================
# Notes
# ==========================================
# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env to version control
# 3. For production, set DEBUG=False and use strong SECRET_KEY
# 4. Configure PostgreSQL for production instead of SQLite
# 5. Update ALLOWED_HOSTS with your actual domain
